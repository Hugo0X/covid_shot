{% extends 'layouts/base.html.twig' %}

{% block title "Mon compte | TPLV"  %}
{% block body %}
        <div class="mx-auto text-center">
                <h1 class="mt-5 mb-3">Bonjour <span class="line"></span>{{ app.user.lastName | upper }} {{ app.user.firstName }},</h1>           

                <p class="mb-5 text-muted">Ici vous pouvez effectuer toutes les actions importantes pour votre compte</p>
                <div class="btn-group d-flex" role="group">
                        <a  class="w-100 h4 text-decoration-none btn btn-outline-primary btn-lg" href="{{ path('app_account_edit' , {token: csrf_token('account_edit')})}}">Modifier votre compte</a> 
                        <a class="w-100 h4 text-decoration-none btn btn-outline-primary btn-lg" href="{{ path('app_account_changePassword', {token: csrf_token('account_changePassword')} )}}">Changer votre mot de passe</a>
                </div>

        </div>  
        <a class="h4 btnFooter text-decoration-none btn btn-outline-danger btn-lg" href="#" onclick="event.preventDefault(); confirm('ÃŠtes vous sur de vouloir supprimer votre compte ?') && document.getElementById('js-deleteUser-form').submit();">Suprimer son compte</a>
        
        <form method="post" id="js-deleteUser-form" action="{{ path('app_account_delete')}}" onsubmit="return confirm('Do you really want delete this user?');">
